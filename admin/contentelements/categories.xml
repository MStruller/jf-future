<?xml version="1.0" ?>
<joomfish type="contentelement">
	<name>Categories</name>
	<author>A. Kempkens</author>
	<version>2.5.0 alpha</version>
	<description>Definition for the core categories</description>
	<copyright>2003 - 2012, Think Network GmbH, Munich</copyright>
	<reference >
		<table name="categories" subnames="extension">
			<field type="referenceid" name="id" translate="0">ID</field>
			<field type="titletext" name="title" translate="1" >Title</field>
			<!-- must add extension ? -->

			<field type="text" name="alias" translate="1" posthandler="filterTitle">Alias</field>

			<field type="hiddentext" name="extension" translate="1">extension</field>
			<field 
				type="category" 
				name="parent_id" 
				jform="1"
				extensionx="com_content" 
				scopex="com_content" 
				translate="1">Parent</field>

			<field type="htmltext" name="description" translate="1" ebuttons="readmore,pagebreak">Description</field>
			
			<!--<field type="checked_out_by" name="checked_out" translate="0">Check out by</field>
			<field type="checked_out_date" name="checked_out_time" translate="0">Check out date</field>-->
			<!-- meta fields -->
			<field type="paramsChilds" name="metakey" translate="1"></field>
			<field type="paramsChilds" name="metadesc" translate="1"></field>
			<field type="paramsChilds" name="metadata" translate="1"></field>
		
			<!-- publishing fields -->
			<field type="paramsChilds" name="created_user_id" translate="1"></field>
			<field type="paramsChilds" name="created_time" translate="1"></field>
			<field type="paramsChilds" name="modified_user_id" translate="1"></field>
			<field type="paramsChilds" name="modified_time" translate="1"></field>
			<field type="params" name="params" translate="1">Attributes</field>
			
			<filter>c.id > 1 </filter>
		</table>
		<component>
			<form>com_categories#categories#cid#task#!edit</form>
		</component>
	<treatment>
		<target>native</target>
		<tableclass>Category</tableclass>
		<publishedfield>published</publishedfield>
	</treatment>
	</reference>
	<translationfilters>
		<keyword>title</keyword>
		<published>published</published>
		
		<language>language</language>
	</translationfilters>
</joomfish>